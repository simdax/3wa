extends layout

mixin stars()
  - var n = 3
  while n > 0
    if name != null
      i.fa.fa-star(:style='{ opacity: opacity}')
    else
      i.fa.fa-star-o
    - n--

mixin badge(user,id)
  li.sitesBadge(id=id)
    a(href="/users/"+user.username).image
      p= user.username
      img(src=user.username+'prev.png')
    .infos
      ul
        for info,k in user.infos
          li #{k} : #{info}
      if name != null
        .stars(@mousemove="rate($event)" @click="go($event)")
          if name != user.username
            +stars
      else
        .stars-plouc
          +stars


