extends layout

mixin badge(name,user,id)
  li.sitesBadge(id=id)
    a(href="/users/"+name).image
      p= name
      img(src=name+'prev.png')
    .infos
      ul
        for v, info in user.infos
          li #{v} : #{info}

block content
  h1 
    | Les crÃ©ations de tous 
    i.fa.fa-heart
  ul.wrap
    each user in users
      - var n = user.username
      if n == name
        +badge(name,user,"moi")
      else
        +badge(name,user,"autres")
